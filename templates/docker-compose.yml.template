services:
  wordpress-{{.Sitename}}:
    image: wordpress:6.8.2-apache
    container_name: wordpress-{{.Sitename}}-apache
    depends_on:
      - wordpress-{{.Sitename}}-db
    ports:
      - "443"
    environment:
      WORDPRESS_DB_HOST: wordpress-{{.Sitename}}-db
      WORDPRESS_DB_NAME: {{.Sitename}}
      WORDPRESS_DB_USER: {{.Sitename}}
      WORDPRESS_DB_PASSWORD: {{.Sitename}}pass
      WORDPRESS_HTTPS: "1"
    volumes:
      - ./wp-data:/var/www/html
      - ../ssl:/etc/ssl/certs:ro
      - ../ssl:/etc/ssl/private:ro
    networks:
      - wpp-deployer-network
    restart: unless-stopped

  wordpress-{{.Sitename}}-db:
    image: mariadb
    container_name: wordpress-{{.Sitename}}-db
    environment:
      MYSQL_DATABASE: {{.Sitename}}
      MYSQL_USER: {{.Sitename}}
      MYSQL_PASSWORD: {{.Sitename}}pass
      MYSQL_ROOT_PASSWORD: rootpass
    volumes:
      - db-data:/var/lib/mysql
    networks:
      - wpp-deployer-network
    restart: unless-stopped

  wpcli:
    image: wpcli-freemius
    container_name: wordpress-{{.Sitename}}-wpcli
    depends_on:
      - wordpress-{{.Sitename}}
    volumes:
      - ./wp-data:/var/www/html
      - ../docker-build-output/{{.Sitename}}:/zips
    networks:
      - wpp-deployer-network
    entrypoint: wp
    environment:
      WORDPRESS_DB_HOST: wordpress-{{.Sitename}}-db
      WORDPRESS_DB_NAME: {{.Sitename}}
      WORDPRESS_DB_USER: {{.Sitename}}
      WORDPRESS_DB_PASSWORD: {{.Sitename}}pass
      HOME: /home/www-data
    user: "33:33"

volumes:
  db-data:

networks:
  wpp-deployer-network:
    external: true 
