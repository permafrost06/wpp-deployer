server {
    listen 80;
    server_name {{.Domain}};

    # redirect to https
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name {{.Domain}};

    ssl_certificate /etc/letsencrypt/live/nshlog.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/nshlog.com/privkey.pem;

    root /usr/share/nginx/html;
    index index.html;

    location / {
        try_files $uri $uri/ =404;
    }
}
